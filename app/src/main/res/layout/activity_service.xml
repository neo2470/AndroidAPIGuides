<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/simpleServiceBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Simple Service"
        android:textAllCaps="false"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/intentServiceBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Intent Service"
        android:textAllCaps="false"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/serviceBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello Service"
        android:textAllCaps="false"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/serviceBinderBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Service Use Binder"
        android:textAllCaps="false"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/serviceMessengerBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Service Use Messenger"
        android:textAllCaps="false"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/timerServiceBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Timer Task in a Service"
        android:textAllCaps="false"
        android:onClick="onClick"/>

    <TextView
        android:id="@+id/counter"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="10"
        android:gravity="center"
        android:textSize="80sp"/>

</LinearLayout>